@using SFA.DAS.FindEpao.Web.Infrastructure
@{
    ViewData["Title"] = "Find an end-point assessment organisation for your apprentice";
    ViewData["Description"] = "Find an independent end-point assessment organisation to carry out your apprentice’s assessment.";
}
<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl ">Find an end-point assessment organisation for your apprentice</h1>
            <p class="govuk-body">Apprentices must complete an assessment to demonstrate what the apprentice has learnt and that they can perform all aspects of their occupation.</p>
            <p class="govuk-body">The end-point assement organisation must be independent from the training provider.</p>
            <h2 class="govuk-heading-m ">When to find an end-point assessment organisation</h2>
            <p class="govuk-body ">Find an end-point assessment organisation early on during the apprenticeship. This will give the employer and apprentice enough of time to prepare for assessment.</p>
            <p class="govuk-body">Employers can ask their training provider to help them find an end-point assessment organisation.</p>

            <p class="govuk-body govuk-!-margin-top-6">
                <a asp-route="@RouteNames.ChooseCourse" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                    Start now
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                    </svg>
                </a>
            </p>
        </div>
    </div>
</main>